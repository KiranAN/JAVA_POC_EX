import com.model.UserMsg;

public class UserDAOImpl implements UserDAO{
	public static UserDAOImpl instance = null;	
	
	public static UserDAOImpl getInstance() {
		if(instance == null) {
			instance = new UserDAOImpl();
		}
		return instance;
	}
	
	public UserDAOImpl() {
